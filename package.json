{
  "name": "hotelier",
  "author": {
    "name": "Martin Cavoj",
    "email": "martincavoj@gmail.com"
  },
  "license": "MIT",
  "description": "Tray App for Hotel Process Manager",
  "version": "0.4.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "ansi2html": "^0.0.1",
    "bootstrap": "^4.3.1",
    "electron-traywindow-positioner": "^0.0.2",
    "electron-updater": "^4.0.6",
    "escape-html": "^1.0.3",
    "eventsource": "^1.0.7",
    "is-electron": "^2.1.0",
    "jquery": "^3.5.0",
    "lodash": "^4.17.19",
    "node-sass": "^4.13.1",
    "popper.js": "^1.15.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "3.0.1",
    "react-transition-group": "~2.4",
    "tail": "^1.2.4"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/enzyme": "^3.9.3",
    "@types/escape-html": "^0.0.20",
    "@types/lodash": "^4.14.134",
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-test-renderer": "^16.8.2",
    "@types/react-transition-group": "^2.9.2",
    "electron": "^7.2.4",
    "electron-builder": "^20.43.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "foreman": "^3.0.1",
    "jest-fetch-mock": "^1.5.0",
    "react-test-renderer": "^16.3.2",
    "tslint": "^5.17.0",
    "tslint-react": "^4.0.0",
    "typescript": "3.4.5"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "proxy": "http://localhost:2000/",
  "scripts": {
    "start": "nf start -p 3000",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "electron:build": "build",
    "postbuild": "build",
    "pregh-publish": "react-scripts build",
    "gh-publish": "build --mac --win -p always",
    "lint": "tslint -c tslint.json 'src/**/*.ts{,x}'",
    "fixcode": "yarn lint --fix"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/index.tsx",
      "!src/electron-wait-react.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "build": {
    "appId": "com.macav.hotelier",
    "productName": "Hotelier",
    "electronVersion": "5.0.0",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "macav",
        "repo": "hotelier"
      }
    ],
    "mac": {
      "extendInfo": {
        "LSUIElement": 1
      },
      "icon": "build/icon.icns",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon.ico"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "build/**/*",
      "build/icon.*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
